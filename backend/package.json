{
  "name": "pokemon-cards-game-backend",
  "description": "Pokemon Card Battle TCG (Express + JWT + tsoa + Postgres)",
  "version": "2.0.0",
  "main": "dist/index.js",
  "module": "dist/index.esm.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "keywords": [],
  "author": "David Rivera <jherax@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "clean": "rimraf dist",
    "psql": "node scripts/start-psql.js",
    "secret": "node scripts/create-secret.js",
    "build": "tsc -p config/tsconfig.build.json",
    "build-prd": "node config/esbuild.js",
    "build-all": "run-s clean swagger build-prd",
    "ts-config": "npm run build -- --showConfig",
    "dev:server": "concurrently -k \"npm:build -- -w\" \"nodemon --trace-warnings dist/index.js\"",
    "start": "node dist/index.js",
    "gendocs": "node scripts/md2html.js",
    "test": "jest -c=config/jest.config.js --detectOpenHandles",
    "test:staged": "jest -c=config/jest.config.js --bail --findRelatedTests --passWithNoTests",
    "test:watch": "jest -c=config/jest.config.js --silent=false --verbose --watch",
    "swagger": "tsoa spec-and-routes"
  },
  "dependencies": {
    "body-parser": "~1.20.2",
    "cors": "~2.8.5",
    "express": "~4.18.2",
    "express-rate-limit": "~7.1.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "typescript": "~5.1.5"
  },
  "devDependencies": {
    "@swc/jest": "~0.2.27",
    "@types/express": "~4.17.17",
    "@types/jest": "~29.5.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "~20.10.0",
    "@types/supertest": "~2.0.12",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "~6.12.0",
    "@typescript-eslint/parser": "~6.12.0",
    "concurrently": "~8.2.2",
    "dotenv": "~16.3.1",
    "esbuild": "~0.19.7",
    "eslint": "~8.54.0",
    "eslint-config-prettier": "~9.0.0",
    "eslint-plugin-simple-import-sort": "~10.0.0",
    "jest": "~29.7.0",
    "lint-staged": "~15.1.0",
    "nodemon": "~3.0.1",
    "npm-dts": "~1.3.12",
    "npm-run-all": "~4.1.5",
    "prettier": "~3.1.0",
    "rimraf": "~5.0.5",
    "showdown": "^2.1.0",
    "supertest": "~6.3.3",
    "ts-node": "~10.9.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run test:staged"
    ]
  },
  "eslintIgnore": [
    "src/swagger/**"
  ]
}
